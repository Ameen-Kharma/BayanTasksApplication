<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="12dp"
    android:background="@color/backgroundcell"
    >
<RelativeLayout
    android:id="@+id/foreground_View"
    android:background="@color/backgroundcell"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        >
        <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task1"
            android:textSize="14dp"
            android:textColor="@color/senderNameColor"/>



        <TextView
            android:id="@+id/message_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good to reach you"
            android:maxLines="2"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:textColor="@color/brifColor" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_docs_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="cool tracker"/>
            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:layout_marginLeft="18dp"
                />
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="completed"/>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_alignTop="@+id/details"
        >


        <TextView
            android:id="@+id/message_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brifColor"
            android:textSize="12dp"
            android:text="31 Dec 2018"
            android:layout_marginBottom="3dp"/>

    </RelativeLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>

